@if (Model.QueryResultList != null)
{
    <table class="table" style="color:black; font-family: Verdana; ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currentProduct in Model.QueryResultList)
            {
                <tr>
                    <td>@currentProduct.Id</td>
                    <td>@currentProduct.ProductName</td>
                    <td><a asp-area="" asp-page="/Index">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}